<div class="table-responsive">
    <table id="scoreboard" class="table table-striped tablesorter">
    <thead>
        <tr>
        <th rowspan="2"></th>
        <th rowspan="2"></th>
        <th rowspan="2">Contributor</th>
        <th rowspan="2">Score</th>
        <th rowspan="2">Commits</th>
        <th colspan="2">Lines</th>
        </tr>
        <tr>
        <th>Added</th>
        <th>Deleted</th>
        </tr>
    </thead>
    <tbody>
        <%= render @coders.sort_by { |c| -c.total_score } %>
    </tbody>
    </table>
</div>
