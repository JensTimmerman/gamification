<tr <% if coder_signed_in? && coder == current_coder %>class="info"<% end %>>
  <td><%= coder_counter + 1 %>.</td>
  <td><%= image_tag coder.avatar_url, alt: coder.github_name, size: '30' %></td>
  <td><%= link_to coder.github_name, coder %>
    <% unless coder.full_name.blank? %>
      <small><%= coder.full_name %></small>
    <% end %>
  </td>
  <td><%= coder.total_score %></td>
  <td><%= coder.commits %></td>
  <td><%= coder.additions %></td>
  <td><%= coder.modifications %></td>
  <td><%= coder.deletions %></td>
</tr>
