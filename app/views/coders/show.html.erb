<% if @coder.blank? %>
  <div class="alert alert-danger fade in">
    This person does not exist.
  </div>
<% else %>
  <div class="container-fluid">
    <div class="col-md-9 col-md-offset-1">
      <div class="page-header">
        <h1>
          <%= @coder.github_name %>
          <small><%= @coder.full_name %></small>
          <%= link_to image_tag('github.png'), @coder.github_url, title: 'View profile on GitHub' %>
        </h1>
      </div>

      <div class="well row score-table">
        <div class="col-md-4">
          <%= image_tag @coder.avatar_url, alt: @coder.github_name, id: 'profile_pic', width:184, height: 184 %>
        </div>
        <div class="col-md-8">
          <span class="metric"><span class="number"><%= format_score @coder.score %></span> points</span>
          <div class="row">
            <div class="col-md-4" title="<%= @coder.commits.count %> commits"><span class="metric"><span class="number"><%= format_short_score @coder.commits.count %></span><br> commits</span></div>
            <div class="col-md-4" title="<%= @coder.additions %> commits"><span class="metric"><span class="number"><%= format_short_score @coder.additions %></span><br> additions</span></div>
            <div class="col-md-4" title="<%= @coder.commits.deletions %> commits"><span class="metric"><span class="number"><%= format_short_score @coder.deletions %></span><br> deletions</span></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
