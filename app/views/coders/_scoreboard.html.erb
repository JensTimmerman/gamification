<table id="scoreboard" class="scoreboard table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th class="rank"></th>
      <th class="avatar"></th>
      <th class="name">Contributor</th>
      <th class="score">Score</th>
      <th class="commits">Commits</th>
      <th class="additions">Additions</th>
      <th class="deletions">Deletions</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'coders/coder', collection: @coders %>
  </tbody>
</table>
